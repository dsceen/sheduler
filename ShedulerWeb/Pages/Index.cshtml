@page
@{
    ViewData["Title"] = "Home page";
}
<h2>Sheduler status: <strong id="ttdisplay"></strong></h2>
<div class="row">
    <div class="col-lg-12">
        <input id="ttbtnStart" class="btn btn-success" type="button" value="Start"/>
        <input id="ttbtnStop" class="btn btn-danger" type="button" value="Stop"/>
    </div>
</div>


@section scripts {
    <script type="text/javascript" src="~/js/TUpdater.js"></script>

    <script type="text/javascript">
        $('#ttdisplay').statusUpdater();

        $('#ttbtnStart').click(function () {
            $.post("/start");
        });

        $('#ttbtnStop').click(function () {
            $.post("/stop");
        });
    </script>
}